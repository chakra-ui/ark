---
import { Box, Container, Stack } from '../../../panda/jsx'
import { Text } from '../shared/Text'
---

<Container py="20">
  <Stack gap="8" align="center">
    <Text textStyle="lg" fontWeight="semibold"
      >Trusted by the world's best companies [social proof to build credibility]</Text
    >
    <Stack direction="row" gap="8" align="center" justify="center">
      {
        Array(6)
          .fill('')
          .map(() => <Box bg="bg.subtle" minH="14" minW="140px" />)
      }
    </Stack>
  </Stack>
</Container>
