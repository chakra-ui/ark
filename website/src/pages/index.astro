---
import { Box } from 'styled-system/jsx'
import Community from '~/components/marketing/community.astro'
import Enterprise from '~/components/marketing/enterprise.astro'
import Footer from '~/components/marketing/footer.astro'
import Hero from '~/components/marketing/hero.astro'
import Highlights from '~/components/marketing/highlights.astro'
import Navbar from '~/components/marketing/navbar.astro'
import Universe from '~/components/marketing/universe.astro'
import Layout from '~/layouts/layout.astro'
---

<Layout
  title="Home"
  description="A headless component library for building reusable, scalable design systems that works for a wide range of JS frameworks."
>
  <Box
    minH="100%"
    position="relative"
    backgroundImage="url(/images/pattern.svg)"
    backgroundRepeat="repeat-x"
  >
    <Box
      position="absolute"
      display={{ base: 'none', sm: 'block' }}
      inset="0"
      height="830px"
      background="radial-gradient(42.48% 42.48% at calc(50% + 100vw / 2) center, #EB5E41 0%, rgba(235, 94, 65, 0) 100%)"
      filter="blur(282px)"
    />
    <Navbar />
    <Hero />
    <Highlights />
    <Enterprise />
    <Universe />
    <Community />
    <Footer />
  </Box>
</Layout>
