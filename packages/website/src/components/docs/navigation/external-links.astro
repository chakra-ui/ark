---
import { BookOpen, Github, Map, MessageCircle } from 'lucide-react'
import { Flex, Stack } from 'styled-system/jsx'
import { Link } from '~/components/ui/link'

const links = [
  {
    label: 'Documentation',
    href: 'https://ark-ui.com',
    icon: BookOpen,
    isActive: true,
  },
  {
    label: 'Discord',
    href: 'https://discord.gg/ww6HE5xaZ2',
    icon: MessageCircle,
  },
  {
    label: 'GitHub',
    href: 'https://github.com/chakra-ui/ark/',
    icon: Github,
  },
  {
    label: 'Roadmap',
    href: 'https://ark-ui.canny.io/',
    icon: Map,
  },
]
---

<Stack gap="4">
  {
    links.map((link) => (
      <Link
        href={link.href}
        target="_blank"
        fontWeight="medium"
        textStyle="sm"
        width="fit-content"
        color="fg.muted"
        _currentPage={{
          color: 'accent.default',
          _hover: {
            color: 'accent.default',
          },
        }}
        aria-current={link.isActive ? 'page' : false}
        textDecoration="none"
        _hover={{ color: 'fg.muted' }}
      >
        <Flex
          align="center"
          justify="center"
          bg="bg.subtle"
          borderWidth="1px"
          borderRadius="l2"
          width="6"
          height="6"
        >
          {<link.icon size="16" />}
        </Flex>
        {link.label}
      </Link>
    ))
  }
</Stack>
