---
import { Box, Flex } from '@ark-ui/styled-system/jsx'
import { match } from 'ts-pattern'
import { AccordionDemo } from '~/demos/accordion-demo'
import { AvatarDemo } from '~/demos/avatar-demo'
import { CarouselDemo } from '~/demos/carousel-demo'
import { CheckboxDemo } from '~/demos/checkbox-demo'
import { ColorPickerDemo } from '~/demos/color-picker-demo'
import { ComboboxDemo } from '~/demos/combobox-demo'
import { DatePickerDemo } from '~/demos/date-picker-demo'
import { DialogDemo } from '~/demos/dialog-demo'
import { EditableDemo } from '~/demos/editable-demo'
import { HoverCardDemo } from '~/demos/hover-card-demo'
import { MenuDemo } from '~/demos/menu-demo'
import { NumberInputDemo } from '~/demos/number-input-demo'
import { PaginationDemo } from '~/demos/pagination-demo'
import { PinInputDemo } from '~/demos/pin-input-demo'
import { PopoverDemo } from '~/demos/popover-demo'
import { RadioGroupDemo } from '~/demos/radio-group-demo'
import { RatingGroupDemo } from '~/demos/rating-group-demo'
import { SegmentGroupDemo } from '~/demos/segment-group-demo'
import { SelectDemo } from '~/demos/select-demo'
import { SliderDemo } from '~/demos/slider-demo'
import { SplitterDemo } from '~/demos/splitter-demo'
import { SwitchDemo } from '~/demos/switch-demo'
import { TabsDemo } from '~/demos/tabs-demo'
import { TagsInputDemo } from '~/demos/tags-input-demo'
import { ToastDemo } from '~/demos/toast-demo'
import { ToggleGroupDemo } from '~/demos/toggle-group-demo'
import { TooltipDemo } from '~/demos/tooltip-demo'

const { component } = Astro.props
---

<Flex
  bg="bg.default"
  minH="40"
  borderRadius="lg"
  borderWidth="1px"
  width="full"
  overflow="hidden"
  className="not-prose"
>
  <Flex justify="center" align="center" flex="1" p={{ base: '4', md: '6' }}>
    {
      match(component)
        .with('accordion', () => <AccordionDemo client:load />)
        .with('avatar', () => <AvatarDemo client:load />)
        .with('carousel', () => <CarouselDemo client:load />)
        .with('checkbox', () => <CheckboxDemo client:load />)
        .with('color-picker', () => <ColorPickerDemo client:load />)
        .with('combobox', () => <ComboboxDemo client:load />)
        .with('date-picker', () => <DatePickerDemo client:load />)
        .with('dialog', () => <DialogDemo client:load />)
        .with('editable', () => <EditableDemo client:load />)
        .with('hover-card', () => <HoverCardDemo client:load />)
        .with('menu', () => <MenuDemo client:load />)
        .with('number-input', () => <NumberInputDemo client:load />)
        .with('pagination', () => <PaginationDemo client:load />)
        .with('pin-input', () => <PinInputDemo client:load />)
        .with('popover', () => <PopoverDemo client:load />)
        .with('radio-group', () => <RadioGroupDemo client:load />)
        .with('rating-group', () => <RatingGroupDemo client:load />)
        .with('segment-group', () => <SegmentGroupDemo client:load />)
        .with('select', () => <SelectDemo client:load />)
        .with('slider', () => <SliderDemo client:load />)
        .with('splitter', () => <SplitterDemo client:load />)
        .with('switch', () => <SwitchDemo client:load />)
        .with('tabs', () => <TabsDemo client:load />)
        .with('tags-input', () => <TagsInputDemo client:load />)
        .with('toast', () => <ToastDemo client:load />)
        .with('toggle-group', () => <ToggleGroupDemo client:load />)
        .with('tooltip', () => <TooltipDemo client:load />)
        .otherwise(() => <Box>No preview available for {component}</Box>)
    }
  </Flex>
</Flex>
