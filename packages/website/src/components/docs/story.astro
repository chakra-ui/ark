---
import { Code } from 'astro/components'
import { getCollection } from 'astro:content'
import { CodeExamples } from './code-examples'

interface Props {
  id: string
}
const { id } = Astro.props
const { slug } = Astro.params

const component = slug?.split('/').pop()
const stories = await getCollection('stories', (story) => story.id.includes(`/${component}.stories` ?? ''))
const [react, solid, vue] = stories
---

<CodeExamples client:load>
  <!-- @ts-expect-error -->
  <Code
    slot="react"
    code={react?.data[id] ?? 'Story not available'}
    lang="tsx"
    theme="css-variables"
  />
  <!-- @ts-expect-error -->
  <Code
    slot="solid"
    code={solid?.data[id] ?? 'Story not available'}
    lang="tsx"
    theme="css-variables"
  />
  <!-- @ts-expect-error -->
  <Code slot="vue" code={vue?.data[id] ?? 'Story not available'} lang="vue" theme="css-variables" />
</CodeExamples>
