---
import { ArrowRight } from 'lucide-react'
import { Box, Container, Flex, Stack } from 'styled-system/jsx'
import { button } from 'styled-system/recipes'
import { match } from 'ts-pattern'
import { Heading, Text } from '~/components/ui'
import ReactIcon from './icons/fill/react.astro'
import SolidIcon from './icons/fill/solid.astro'
import VueIcon from './icons/fill/vue.astro'
import ArkIcon from './icons/fill/ark.astro'
---

<Box bg="bg.subtle">
  <Container py={{ base: '16', md: '24' }} maxW="7xl">
    <Stack direction={{ base: 'column', md: 'row' }} gap={{ base: '12', md: '16' }}>
      <Stack gap={{ base: '8', md: '10' }} alignItems="start">
        <Stack gap={{ base: '4', md: '5' }} maxW="3xl">
          <Heading textStyle={{ base: '2xl', md: '3xl' }} fontWeight="semibold">
            Designed for product teams and organizations
          </Heading>
          <Text color="fg.muted" textStyle={{ base: 'lg', md: 'xl' }}>
            With support for a wide range of JS frameworks, you can create a design system that can
            be seamlessly integrated across multiple platforms and applications.
          </Text>
        </Stack>
        <a
          href="/docs/overview/introduction"
          class={button({ size: { base: 'lg', md: '2xl' }, variant: 'link' })}
        >
          Get started <ArrowRight />
        </a>
      </Stack>
      <Flex align="center" justify="center" flex="1">
        <Box
          display="grid"
          gridTemplateColumns={{ base: 'repeat(4, 64px)', md: 'repeat(2, 80px)' }}
          gap="3"
        >
          {
            ['React', 'Vue', 'Ark', 'Solid'].map((name) =>
              match(name)
                .with('React', () => <ReactIcon key={name} />)
                .with('Vue', () => <VueIcon key={name} />)
                .with('Solid', () => <SolidIcon key={name} />)
                .with('Ark', () => <ArkIcon key={name} />)
                .run(),
            )
          }
        </Box>
      </Flex>
    </Stack>
  </Container>
</Box>
