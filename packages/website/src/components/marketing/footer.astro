---
import { Container, Stack } from 'styled-system/jsx'
import { Logo } from '../logo'
import { Text } from '~/components/ui'

const resources = [
  {
    name: 'Docs',
    href: '/docs/overview/getting-started',
  },
  {
    name: 'GitHub',
    href: 'https://github.com/chakra-ui/ark',
  },
  {
    name: 'Twitter',
    href: 'https://twitter.com/ark_ui_',
  },
  {
    name: 'Discord',
    href: 'https://discord.gg/ww6HE5xaZ2',
  },
]
---

<footer role="contentinfo">
  <Container py="12" maxW="7xl">
    <Stack direction={{ base: 'column-reverse', md: 'row' }} justify="space-between" gap="8">
      <Stack gap={{ base: '1', md: '6' }} direction={{ base: 'column', md: 'row' }} align="start">
        <Logo height="24px" />
        <Text color="fg.muted">A project by Chakra Systems</Text>
      </Stack>
      <Stack direction="row" gap="8">
        {
          resources.map((resource) => (
            <a href={resource.href} target="_blank">
              {resource.name}
            </a>
          ))
        }
      </Stack>
    </Stack>
  </Container>
</footer>
