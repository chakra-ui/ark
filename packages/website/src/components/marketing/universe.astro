---
import { css } from '@ark-ui/styled-system/css'
import { Box, Container, Flex, Stack } from '@ark-ui/styled-system/jsx'
import { match } from 'ts-pattern'
import { Heading, Typography } from '~/components/ui/typography'
import React from './icons/react.astro'
import Solid from './icons/solid.astro'
import Vue from './icons/vue.astro'
import Js from './icons/js.astro'
---

<Box
  backgroundImage={{
    base: 'url(/images/pattern.svg)',
    _dark: 'url(/images/pattern_dark.svg)',
  }}
  backgroundRepeat="repeat-x"
  width="full"
  mt={{ base: '16', md: '24' }}
>
  <Container pt={{ base: '16', md: '40' }}>
    <Heading textAlign="center" textStyle="4xl" maxW="3xl" mx="auto">
      Driven by <span class={css({ color: 'accent.default' })}>State Machines</span><br /> to make
      your life easier.
    </Heading>
  </Container>
</Box>
<Box
  backgroundImage={{
    base: 'url(/images/universe.svg)',
    _dark: 'url(/images/universe_dark.svg)',
  }}
  backgroundPosition="center center"
  backgroundRepeat="repeat-x"
  width="full"
>
  <Container pt={{ base: '8', md: '10' }} pb={{ base: '8', md: '10' }} maxW="7xl">
    <Stack direction="row" align="center" width="full" justify="space-evenly">
      {
        [
          { framework: 'React', icon: React },
          { framework: 'Vue', icon: Vue },
          { framework: 'Ark', icon: React },
          { framework: 'Solid', icon: Solid },
          { framework: 'JS', icon: Js },
        ].map((item, id) =>
          match(item)
            .with({ framework: 'Ark' }, () => <Box width="358px" height="358px" />)
            .otherwise(() => (
              <Flex
                borderRadius="full"
                justify="center"
                align="center"
                borderWidth="2px"
                borderColor={{
                  base: '#F6E1DB',
                  _dark: '#391915',
                }}
                bg="bg.canvas"
                width="24"
                height="24"
                display={{ base: 'none', md: 'flex' }}
              >
                {<item.icon width="48" />}
              </Flex>
            )),
        )
      }
    </Stack>
  </Container>
</Box>
<Container pb={{ base: '16', md: '24' }}>
  <Stack align="center" gap={{ base: '8', md: '10' }}>
    <Typography color="fg.muted" textStyle={{ base: 'lg', md: 'xl' }} textAlign="center" maxW="3xl">
      Utilizing state machines, Ark UI substantially cuts down on errors while ensuring predictable
      behavior in every component. Develop with confidence.
    </Typography>
  </Stack>
</Container>
