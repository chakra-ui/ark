---
import type { CollectionEntry } from 'astro:content'
import { article } from '@ark-ui/styled-system/recipes'
import Breadcrumbs from './navigation/breadcrumbs.astro'

type Props = {
  component: CollectionEntry<'components'> | CollectionEntry<'docs'>
}

const { component } = Astro.props
---

<div class={article({ size: { base: 'sm', md: 'md' } })}>
  <Breadcrumbs display={{ base: 'none', lg: 'flex' }} mb="4" />
  <h1>
    {component.data.title}
  </h1>
  <p>
    {component.data.description}
  </p>
</div>
