{
  "Basic": "const Basic = () => (\n  <HoverCard>\n    {() => (\n      <>\n        <HoverCardTrigger asChild>\n          <a href=\"https://mastodon.com/zag_js\" target=\"_blank\" rel=\"noreferrer\">\n            Mastodon\n          </a>\n        </HoverCardTrigger>\n\n        <Portal>\n          <HoverCardPositioner>\n            <HoverCardContent>\n              <HoverCardArrow>\n                <HoverCardArrowTip />\n              </HoverCardArrow>\n              Mastodon Preview\n            </HoverCardContent>\n          </HoverCardPositioner>\n        </Portal>\n      </>\n    )}\n  </HoverCard>\n)",
  "Controlled": "const Controlled = () => {\n  const [isOpen, setOpen] = useState(false)\n  return (\n    <>\n      <button onClick={() => setOpen(!isOpen)}>click me</button>\n      <HoverCard open={isOpen} onClose={() => setOpen(false)} openDelay={0} closeDelay={0}>\n        <HoverCardTrigger>\n          <a href=\"https://mastodon.com/zag_js\" target=\"_blank\" rel=\"noreferrer\">\n            Mastodon\n          </a>\n        </HoverCardTrigger>\n        <Portal>\n          <HoverCardPositioner>\n            <HoverCardContent>\n              <HoverCardArrow>\n                <HoverCardArrowTip />\n              </HoverCardArrow>\n              Mastodon Preview\n            </HoverCardContent>\n          </HoverCardPositioner>\n        </Portal>\n      </HoverCard>\n    </>\n  )\n}"
