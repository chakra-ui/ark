{
  "meta": "const meta = {\n  title: 'Popover',\n  component: Popover,\n}",
  "Basic": "const Basic = () => (\n  <Popover>\n    <PopoverTrigger>\n      <button>click me</button>\n    </PopoverTrigger>\n    <PopoverPositioner>\n      <PopoverArrow>\n        <PopoverArrowTip />\n      </PopoverArrow>\n      <PopoverContent>\n        <PopoverTitle>Title</PopoverTitle>\n        <PopoverDescription>Description</PopoverDescription>\n        <input type=\"text\" />\n        <PopoverCloseTrigger>\n          <button>close</button>\n        </PopoverCloseTrigger>\n      </PopoverContent>\n    </PopoverPositioner>\n  </Popover>\n)",
  "Controlled": "const Controlled = () => {\n  const [isOpen, setIsOpen] = useState(false)\n  return (\n    <>\n      <button onClick={() => setIsOpen((prev) => !prev)}>click me</button>\n      <Popover isOpen={isOpen} onClose={() => setIsOpen(false)}>\n        <PopoverAnchor>\n          <span>anchor</span>\n        </PopoverAnchor>\n        <PopoverPositioner>\n          <PopoverArrow>\n            <PopoverArrowTip />\n          </PopoverArrow>\n          <PopoverContent>\n            <PopoverTitle>Title</PopoverTitle>\n            <PopoverDescription>Description</PopoverDescription>\n            <input type=\"text\" />\n            <PopoverCloseTrigger>\n              <button>close</button>\n            </PopoverCloseTrigger>\n          </PopoverContent>\n        </PopoverPositioner>\n      </Popover>\n    </>\n  )\n}"
}
