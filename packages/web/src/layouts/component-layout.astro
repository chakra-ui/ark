---
import type { CollectionEntry } from 'astro:content'
import { Stack } from 'styled-system/jsx'
import { ComponentTabs } from '~/components/navigation/component-tabs'
import PageHeader from '~/components/page-header.astro'
import DocsLayout from './docs-layout.astro'

interface Props {
  component: CollectionEntry<'components'>
}

const pathname = Astro.url.pathname.replace(/\/$/, '')
const basePath = `/docs/components/${Astro.params.component}`
const { component } = Astro.props
---

<DocsLayout>
  <Stack gap={{ base: '5', md: '6' }}>
    <PageHeader component={component} />
    <ComponentTabs pathname={pathname} basePath={basePath} client:load />
    <slot />
  </Stack>
</DocsLayout>
