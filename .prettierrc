{
  "printWidth": 120,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "arrowParens": "always",
  "semi": false,
  "useTabs": false,
  "htmlWhitespaceSensitivity": "ignore",
  "plugins": [
    "prettier-plugin-svelte"
  ],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    },
    {
      "files": [
        "*.md",
        "*.mdx"
      ],
      "options": {
        "printWidth": 120,
        "proseWrap": "always"
      }
    }
  ]
}