{
  "name": "@atlas/root",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "turbo run lint",
    "test": "turbo run test:ci",
    "typecheck": "turbo run typecheck",
    "doc": "pnpm --filter=@atlas/docs",
    "react": "pnpm --filter=@atlas/react",
    "solid": "pnpm --filter=@atlas/solid"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@typescript-eslint/eslint-plugin": "5.41.0",
    "@typescript-eslint/parser": "5.41.0",
    "@types/node": "18.11.7",
    "eslint": "8.26.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "turbo": "1.6.2",
    "typescript": "4.8.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@7.13.5"
}
