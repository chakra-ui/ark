{
  "name": "root",
  "type": "module",
  "private": true,
  "workspaces": [
    "anatomy",
    "frameworks/*",
    "scripts",
    "website"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build --filter='!./templates/**'",
    "exports:check": "bun scripts exports:check",
    "exports:sync": "bun scripts exports:sync",
    "format:check": "prettier --plugin prettier-plugin-organize-imports --check frameworks/**/src",
    "format:write": "prettier --plugin prettier-plugin-organize-imports --write frameworks/**/src",
    "lint": "turbo run lint",
    "test": "turbo run test:ci",
    "typecheck": "turbo run typecheck",
    "document:types": "turbo run typedocs",
    "document:stories": "turbo run storydocs",
    "react": "bun run --cwd frameworks/react",
    "solid": "bun run --cwd frameworks/solid",
    "vue": "bun run --cwd frameworks/vue",
    "anatomy": "bun run --cwd anatomy",
    "scripts": "bun run --cwd scripts",
    "website": "bun run --cwd website"
  },
  "devDependencies": {
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-conventional": "19.1.0",
    "concurrently": "8.2.2",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "prettier-plugin-astro": "0.13.0",
    "prettier-plugin-organize-imports": "3.2.4",
    "react": "18.2.0",
    "turbo": "1.13.0",
    "typescript": "5.4.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json}": [
      "prettier --plugin prettier-plugin-organize-imports --write"
    ]
  },
  "packageManager": "bun@1.1.0"
}
