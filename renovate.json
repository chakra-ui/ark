{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":semanticCommitTypeAll(chore)", "schedule:earlyMondays"],
  "labels": ["dependencies"],
  "rebaseWhen": "conflicted",
  "timezone": "UTC",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": "before 6:00am on the first day of the month"
  },
  "prConcurrentLimit": 30,
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "extends": "monorepo:zag-js",
      "schedule": "at any time"
    },
    {
      "extends": "monorepo:panda-css",
      "schedule": "at any time"
    },
    {
      "groupName": "lucide-icons",
      "matchPackagePrefixes": ["lucide"]
    }
  ],
  // @ark-ui/solid is ignored because its downgraded version is needed in solid start template
  "ignoreDeps": ["@types/node", "@ark-ui/solid"]
}
